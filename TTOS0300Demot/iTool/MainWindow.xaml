<Window x:Class="iTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iTool"
        mc:Ignorable="d"
        Title="iTool" Height="800" Width="400">
    <Grid Background="Light">
        <StackPanel>
            <Label Content="iTool: Register" HorizontalContentAlignment="Center" FontSize="30" Margin="0 40 0 40"/>
            <Label Content="E-mail" HorizontalContentAlignment="Center" FontSize="18" Margin="0 0 0 0"/>
            <TextBox x:Name="txtEmail" Margin="0 0 0 10" Height="50" Width="300"/>
            <Label Content="Password" HorizontalContentAlignment="Center" FontSize="18"/>
            <PasswordBox x:Name="pwdPassword" Margin="0 0 0 10" Height="50" Width="300"/>
            <StackPanel Orientation="Horizontal" Width="300">
                <Button x:Name="btnLogin" Content="Login" Background="LightGray" Height="30" Width="140" HorizontalContentAlignment="Center" Margin="0 0 10 0"/>
                <Button x:Name="btnRegister" Content="Register" Background="LightGray" Height="30" Width="140" HorizontalContentAlignment="Center" Margin="10 0 0 0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
