<Window x:Class="AudioVideoPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioVideoPlayer"
        mc:Ignorable="d"
        Title="Samson's AudioVideoPlayer" Height="450" Width="800" FontSize="18">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtFilename" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="f:\KT-ohjelmointi\testi.mp4" VerticalAlignment="Top" Width="300"/>
        <Button x:Name="btnPlay" Content="Play" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="115,38,0,0" VerticalAlignment="Top" Width="100"/>
        <MediaElement x:Name="MyMediaElement" HorizontalAlignment="Left" Height="300" Margin="10,71,0,0" VerticalAlignment="Top" Width="600"/>

    </Grid>
</Window>
