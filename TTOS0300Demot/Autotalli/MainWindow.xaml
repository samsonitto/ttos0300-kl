<Window x:Class="Autotall1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autotall1"
        mc:Ignorable="d"
        Title="TTOS0300CarGarage" Height="620" Width="650">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Background="LightGray">
                <Button x:Name="btnGetAllCars" Content="Hae kaikki autot" Margin="10" Width="120" Click="BtnGetAllCars_Click"/>
                <Button x:Name="btnGetTeslas" Content="Hae teslat" Margin="10" Width="120"/>
                <ComboBox x:Name="cbMerkki" Margin="10" Width="100" SelectionChanged="CbMerkki_SelectionChanged"/>
            </StackPanel>
            <DataGrid x:Name="dgCars" SelectionChanged="DgCars_SelectionChanged"/>
            <Image x:Name="imgCar" Source="images/roadster.jpg" Width="600" Margin="10"/>
        </StackPanel>

    </Grid>
</Window>
